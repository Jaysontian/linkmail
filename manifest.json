{
  "manifest_version": 3,
  "name": "LinkedIn Email Scraper & Outreach",
  "version": "1.0",
  "description": "Scrapes emails from LinkedIn profiles, drafts outreach emails via Gmail API, and uses AI to generate messages.",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/logo.png",
      "48": "assets/logo.png"
    }
  }
}
