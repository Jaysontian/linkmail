{
  "manifest_version": 3,
  "name": "LinkMail",
  "version": "1.1",
  "description": "Email Client for LinkedIn",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-ancestors 'none';"
  },
  "web_accessible_resources": [{
    "resources": [
      "content/linkedin-div.html",
      "dashboard.html",
      "dashboard/*.js",
      "generate/*.js",
      "send/*.js",
      "templates/*.js",
      "history/*.js",
      "profile/*.js",
      "assets/*"
    ],
    "matches": ["https://*.linkedin.com/*"]
  }],
  "host_permissions": [
    "https://linkmail-api.vercel.app/*",
    "https://linkmail-sending.vercel.app/*",
    "*://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://www.linkedin.com/*"],
    "css": [
      "styles/main.css",
      "styles/ui.css",
      "styles/linkedin-div.css",
      "styles/dashboard.css",
      "styles/anim.css"
    ],
    "js": [
      "backend/backend-api.js",
      "profile/profile-manager.js",
      "generate/email-generator.js",
      "send/email-sender.js",
      "templates/template-manager.js",
      "history/email-history.js",
      "content/gmail-manager.js",
      "content/utils.js",
      "content/email-finder.js",
      "content/profile-scraper.js",
      "content/url-observer.js",
      "content/ui-manager.js",
      "content/content.js"
    ],
    "run_at": "document_start"
  }]
}